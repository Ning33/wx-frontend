page,
.page,
.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}

.weui-navbar__title{
    font-weight: bold;
}
.weui-image{

    font-weight: bold;
}
.weui-images{
    text-align: center;
    padding-top: 20px;
    display: flex;
    flex-direction: row;
}
.weui-image{
    flex: 1;
}
/**view之间的灰色间隔*/
.weui-interval{
    background-color: #f2f2f2;
    height: 7px;
    width: 100%;
}
.weui-tab_top_content{
    display: flex;
    align-items: center;
    vertical-align: center;
    font-family: "微软雅黑";
    font-size: 15px;
}
.weui-tab__content_title{
    display: flex;
    align-items: center;
    vertical-align: center;
    justify-content: space-between;
    height: 50px; 
    border-bottom: solid 1px #f2f2f2;
}